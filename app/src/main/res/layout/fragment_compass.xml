<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                                   xmlns:app = "http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools = "http://schemas.android.com/tools"
                                                   android:id = "@+id/compassLayout"
                                                   android:layout_width = "match_parent"
                                                   android:layout_height = "match_parent"
                                                   android:keepScreenOn = "true"
                                                   tools:context = ".fragments.CompassFragment">

    <LinearLayout
        android:id = "@+id/linearLayout12"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background = "@drawable/headingcard"
        android:fadingEdge = "horizontal"
        android:orientation = "vertical"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent">

            <TextView
                android:id = "@+id/Name"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:fontFamily = "@font/nunito"
                android:gravity = "center_horizontal"
                android:text = "@string/compass"
                android:textAlignment = "center"
                android:textSize = "36sp"
                android:textStyle = "bold"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width = "0dp"
        android:layout_height = "0dp"
        android:layout_margin = "10dp"
        android:background = "@drawable/display"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/linearLayout12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/constraintLayout"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "8dp"
            android:layout_marginEnd = "8dp"
            android:background = "@drawable/locationanddegrees"
            android:padding = "20dp"
            android:tooltipText = "Current location"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent">

            <TextView
                android:id = "@+id/location"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:fontFamily = "@font/nunito"
                android:text = "@string/current_location_label"
                android:textSize = "16sp"
                android:textStyle = "bold"
                android:tooltipText = "Current location"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"/>

            <TextView
                android:id = "@+id/location2"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:fontFamily = "@font/nunito"
                android:text = "@string/location"
                android:textSize = "16sp"
                android:textStyle = "bold"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/constraintLayout2"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "8dp"
            android:layout_marginEnd = "8dp"
            android:background = "@drawable/locationanddegrees"
            android:padding = "20dp"
            android:tooltipText = "Direction Towards Qibla"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/constraintLayout">

            <TextView
                android:id = "@+id/qibla"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:fontFamily = "@font/nunito"
                android:text = "@string/qibla_direction"
                android:textSize = "16sp"
                android:textStyle = "bold"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"/>

            <TextView
                android:id = "@+id/degree"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "50dp"
                android:layout_marginEnd = "8dp"
                android:fontFamily = "@font/nunito"
                android:text = "@string/degree"
                android:textSize = "16sp"
                android:textStyle = "bold"
                android:tooltipText = "Direction Towards Qibla"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toStartOf = "@+id/degree2"
                app:layout_constraintHorizontal_bias = "1.0"
                app:layout_constraintStart_toEndOf = "@+id/qibla"
                app:layout_constraintTop_toTopOf = "parent"/>

            <TextView
                android:id = "@+id/degree2"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:fontFamily = "@font/nunito"
                android:text = "@string/degrees_label"
                android:textSize = "16sp"
                android:textStyle = "bold"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/constraintLayout3"
            android:layout_width = "359dp"
            android:layout_height = "349dp"
            android:layout_marginStart = "16dp"
            android:layout_marginEnd = "16dp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/constraintLayout2">

            <ImageView
                android:id = "@+id/compass"
                android:layout_width = "0dp"
                android:layout_height = "0dp"
                android:layout_marginStart = "16dp"
                android:layout_marginEnd = "16dp"
                android:contentDescription = "@string/qibla_compass"
                android:padding = "20dp"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintHorizontal_bias = "0.0"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"
                app:srcCompat = "@drawable/ic_qibla"
                tools:ignore = "VectorDrawableCompat"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>