<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                                   xmlns:app = "http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools = "http://schemas.android.com/tools"
                                                   android:layout_width = "match_parent"
                                                   android:layout_height = "match_parent"
    android:background="?android:windowBackground"
                                                   tools:context = ".fragments.About">

    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical">

            <androidx.cardview.widget.CardView
                android:layout_width = "match_parent"
                android:layout_height = "48dp"
                android:layout_margin = "10dp"
                app:cardCornerRadius = "10dp"
                app:cardElevation = "5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_gravity = "center">

                    <TextView
                        android:id = "@+id/textView5"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:fontFamily = "@font/nunito"
                        android:padding = "5dp"
                        android:text = "@string/version"
                        android:textSize = "24sp"
                        android:textStyle = "bold"
                        app:layout_constraintBottom_toBottomOf = "parent"
                        app:layout_constraintEnd_toEndOf = "parent"
                        app:layout_constraintHorizontal_bias = "0.264"
                        app:layout_constraintStart_toStartOf = "parent"
                        app:layout_constraintTop_toTopOf = "parent"
                        app:layout_constraintVertical_bias = "0.0"/>

                    <TextView
                        android:id = "@+id/version"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_marginStart = "8dp"
                        android:fontFamily = "@font/nunito"
                        android:padding = "5dp"
                        android:text = "@string/_0_0"
                        android:textSize = "24sp"
                        android:textStyle = "bold"
                        app:layout_constraintBottom_toBottomOf = "parent"
                        app:layout_constraintEnd_toEndOf = "parent"
                        app:layout_constraintHorizontal_bias = "0.301"
                        app:layout_constraintStart_toEndOf = "@+id/textView5"
                        app:layout_constraintTop_toTopOf = "parent"
                        app:layout_constraintVertical_bias = "0.0"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_margin = "10dp"
                android:background = "@drawable/aboutcard"
                android:orientation = "vertical"
                android:padding = "15dp">

                <TextView
                    android:id = "@+id/aboutauthor"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:fontFamily = "@font/nunito"
                    android:padding = "10dp"
                    android:text = "@string/about_author"
                    android:textAlignment = "center"
                    android:textSize = "24sp"
                    android:textStyle = "bold"/>

                <TextView
                    android:id = "@+id/textView3"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:fontFamily = "@font/nunito"
                    android:gravity = "center"
                    android:padding = "5dp"
                    android:text = "@string/author"
                    android:textSize = "24sp"
                    android:textStyle = "bold"/>

                <TextView
                    android:id = "@+id/textView4"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:fontFamily = "@font/nunito"
                    android:padding = "8dp"
                    android:text = "@string/occupation"
                    android:textAlignment = "center"
                    android:textSize = "18sp"/>

                <TextView
                    android:id = "@+id/textView7"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:fontFamily = "@font/nunito"
                    android:padding = "8dp"
                    android:text = "@string/developement_flag"
                    android:textSize = "18sp"/>

                <TextView
                    android:id = "@+id/textView27"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:fontFamily = "@font/nunito"
                    android:padding = "8dp"
                    android:text = "@string/nimaz_is_created_with_the_help_of_allah_for_the_sake_of_allah"
                    android:textSize = "18sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:alignContent="center"
                        app:alignItems="center"
                        app:flexWrap="wrap"
                        app:justifyContent="space_between">


                        <ImageButton
                            android:id="@+id/website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:contentDescription="@string/link_to_website"
                            android:src="@drawable/ic_external_link"
                            android:tooltipText="Website"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:contentDescription="@string/email_account_of_arshad_shah"
                            android:src="@drawable/ic_mail"
                            android:tooltipText="Email Me"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/website"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/github"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:contentDescription="@string/github_account_of_arshad_shah"
                            android:src="@drawable/ic_github"
                            android:tooltipText="Check out my github"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/mail"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/linkedin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:contentDescription="@string/linkedin_account_of_arshad_shah"
                            android:src="@drawable/ic_linkedin"
                            android:tooltipText="check out my linkedin"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/github"
                            app:layout_constraintTop_toTopOf="parent" />
                    </com.google.android.flexbox.FlexboxLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_margin = "10dp"
                android:background = "@drawable/aboutcard"
                android:orientation = "vertical">

                <TextView
                    android:id="@+id/references"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:padding="10dp"
                    android:text="@string/references"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:contentPadding="5dp">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:alignContent="center"
                        app:alignItems="center"
                        app:flexDirection="row"
                        app:flexWrap="nowrap"
                        app:justifyContent="space_between">

                        <TextView
                            android:id="@+id/textView213"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:breakStrategy="simple"
                            android:fontFamily="@font/nunito"
                            android:padding="8dp"
                            android:text="Better Arabic Reshaper based on:"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/ref4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:padding="10dp"
                            android:src="@drawable/ic_external_link" />
                    </com.google.android.flexbox.FlexboxLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:contentPadding="5dp">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:alignContent="center"
                        app:alignItems="center"
                        app:flexDirection="row"
                        app:flexWrap="nowrap"
                        app:justifyContent="space_between">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:breakStrategy="simple"
                            android:fontFamily="@font/nunito"
                            android:padding="8dp"
                            android:text="Tanzil Quran:"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/ref"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:padding="10dp"
                            android:src="@drawable/ic_external_link" />
                    </com.google.android.flexbox.FlexboxLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:contentPadding="5dp">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:alignContent="center"
                        app:alignItems="center"
                        app:flexDirection="row"
                        app:flexWrap="nowrap"
                        app:justifyContent="space_between">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:breakStrategy="simple"
                            android:fontFamily="@font/nunito"
                            android:padding="8dp"
                            android:text="@string/menuOptionreference3"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/ref1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:padding="10dp"
                            android:src="@drawable/ic_external_link" />

                    </com.google.android.flexbox.FlexboxLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:contentPadding="5dp">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:alignContent="center"
                        app:alignItems="center"
                        app:flexDirection="row"
                        app:flexWrap="nowrap"
                        app:justifyContent="space_between">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:breakStrategy="simple"
                            android:fontFamily="@font/nunito"
                            android:padding="8dp"
                            android:text="@string/menuOptionreference1"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/ref2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:src="@drawable/ic_external_link" />

                    </com.google.android.flexbox.FlexboxLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:contentPadding="5dp">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:alignContent="center"
                        app:alignItems="center"
                        app:flexDirection="row"
                        app:flexWrap="nowrap"
                        app:justifyContent="space_between">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:breakStrategy="simple"
                            android:fontFamily="@font/nunito"
                            android:padding="8dp"
                            android:text="@string/menuOptionreference2"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/ref3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/finecontrol"
                            android:src="@drawable/ic_external_link" />

                    </com.google.android.flexbox.FlexboxLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>