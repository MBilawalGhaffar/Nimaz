<resources xmlns:tools = "http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name = "Theme.Nimaz" parent = "Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name = "colorPrimary">@color/textwhite</item>
        <item name = "colorPrimaryVariant">@color/text</item>
        <item name = "colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name = "colorSecondary">#FFFFFF</item>
        <item name = "colorSecondaryVariant">@color/text</item>
        <item name = "colorOnSecondary">@color/text</item>
        <!-- Status bar color. -->
        <item name = "android:statusBarColor" tools:targetApi = "l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name = "android:windowBackground">@color/text</item>
    </style>

    <style name = "ThemeOverlay.Nimaz.AppWidgetContainer" parent = "Theme.AppCompat.DayNight">
        <item name = "appWidgetBackgroundColor">#000000</item>
        <item name = "appWidgetTextColor">#FFFFFF</item>
    </style>
</resources>